{
  "name": "prometheus-mcp-lambda-cdk",
  "version": "1.0.0",
  "description": "CDK deployment for Prometheus MCP Lambda server",
  "main": "bin/lambda-app.js",
  "scripts": {
    "build": "tsc",
    "cdk": "cdk",
    "deploy:lambda": "cdk deploy --app 'npx ts-node bin/lambda-app.ts' --all",
    "deploy:lambda:cognito": "cdk deploy --app 'npx ts-node bin/lambda-app.ts' PrometheusLambdaCognitoStack",
    "deploy:lambda:function": "cdk deploy --app 'npx ts-node bin/lambda-app.ts' PrometheusLambdaStack", 
    "deploy:lambda:api": "cdk deploy --app 'npx ts-node bin/lambda-app.ts' PrometheusLambdaAPIGatewayStack",
    "update-config": "./scripts/update-mcp-config.sh",
    "destroy": "cdk destroy --app 'npx ts-node bin/lambda-app.ts' --all",
    "diff": "cdk diff --app 'npx ts-node bin/lambda-app.ts'",
    "synth": "cdk synth --app 'npx ts-node bin/lambda-app.ts'"
  },
  "dependencies": {
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "aws-cdk": "^2.120.0",
    "aws-cdk-lib": "^2.120.0",
    "constructs": "^10.3.0",
    "typescript": "^5.3.0"
  },
  "keywords": ["aws", "cdk", "lambda", "mcp", "prometheus"],
  "author": "MCP Lambda Deployment",
  "license": "MIT"
}
